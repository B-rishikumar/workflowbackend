
{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "#{ConnectionString}#",
    "Redis": "#{RedisConnectionString}#"
  },
  "JwtSettings": {
    "SecretKey": "#{JwtSecretKey}#",
    "Issuer": "#{JwtIssuer}#",
    "Audience": "#{JwtAudience}#",
    "ExpiryMinutes": 60
  },
  "SmtpSettings": {
    "Host": "#{SmtpHost}#",
    "Port": "#{SmtpPort}#",
    "Username": "#{SmtpUsername}#",
    "Password": "#{SmtpPassword}#",
    "FromEmail": "#{SmtpFromEmail}#",
    "FromName": "Workflow Management System",
    "EnableSsl": true
  },
  "AllowedOrigins": [
    "#{AllowedOrigin1}#",
    "#{AllowedOrigin2}#"
  ],
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/workflow-management-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "#{SeqServerUrl}#",
          "apiKey": "#{SeqApiKey}#"
        }
      }
    ]
  }
}